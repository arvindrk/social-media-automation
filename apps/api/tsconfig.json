{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Override for NestJS build requirements
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,

    // Allow importing without .ts extensions for NestJS compatibility
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
